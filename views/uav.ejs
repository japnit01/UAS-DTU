<%-include("partials/header")%>

<style>
    nav.transparent {
        position: fixed !important;
        top: 0;
    }
    .bg-video {
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        height: 100%;
        width: 100%;
    }
    .empty {
        width: 100%;
        height: 100vh;
    }
    .empty h3 {
        position: relative;
        top: 70vh;
        text-align: center;
        color: #ffffff;
        text-shadow: 0 0 10px #000000;
    }
    .ctn {
        background-color: #dddddd;
        padding: 20px 60px;
    }
    .specs {
        width: 40vw;
        padding-right: 20px;
    }
    .outer {
        display: flex;
        display: -moz-flex;
        display: -webkit-flex;
    }
</style>

<div class="main">
    <video autoplay muted loop class="bg-video">
        <source src="<%= info.video %>">
    </video>
    <div class="empty">
        <h3 style="text-transform: uppercase; font-weight: 800; font-size: 5.3vw;"><%= info.name %></h3>
    </div>

    <div class="ctn">
        <p style="font-size: 20px; background-color: #ffffff; padding: 20px;"><%= info.desc %></p>
        <br><br>

        <div class="outer">
            <div class="specs">
                <h4>SPECIFICATIONS</h4>
                <ul style="margin-top: 40px; font-size: 18px; line-height: 33px;">
                    <% for(let i of info.specs) { %>
                        <li><%= i %></li>
                    <% } %>
                </ul>
            </div>

            <div>
                <img src="/sample-collage.jpg" width="100%">
            </div>
        </div>
    </div>
</div>

<script>
    let main = document.querySelector('.main');
    let nav = document.querySelector('.transparent');

    let shift = window.getComputedStyle(nav).getPropertyValue('height');
    // console.log(shift);
    main.style.marginTop = shift;
</script>

<%-include("partials/footer")%>
